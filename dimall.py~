# Discrete Math Library
# Written by Amirmohammad Mehdipour

import matplotlib.pyplot as plt
import numpy as np

def draw_matrix_graph(matrix):
    n = len(matrix)
    angles = np.linspace(0, 2 * np.pi, n, endpoint=False)
    x = np.cos(angles)
    y = np.sin(angles)
    fig, ax = plt.subplots(figsize=(8,8))
    for i in range(n):
        for j in range(n):
            if matrix[i][j]:
                ax.plot([x[i], x[j]], [y[i], y[j]], 'k-', alpha=0.5, linewidth=1)

    ax.scatter(x, y, s=500, c='skyblue', edgecolors='black')

    for i in range(n):
        ax.text(x[i], y[i], str(i), ha='center', va='center', fontweight='bold')

    ax.set_xlim(-1.5, 1.5)
    ax.set_ylim(-1.5, 1.5)
    ax.axis('off')

    plt.show()
